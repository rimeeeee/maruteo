# Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Secret Key
JWT_SECRET_KEY=your_super_secret_jwt_key_here

# App Secret Key
SECRET_KEY=your_secret_key_here

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Server Port
PORT=3001

# Environment
FLASK_ENV=development
FLASK_DEBUG=True 

# PostgreSQL Database Configuration (GCP Cloud SQL)
# Leave empty for SQLite in development
DB_HOST=your_gcp_cloudsql_host
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_SSL_MODE=require

# Google Cloud API Keys (for Speech-to-Text and Text-to-Speech)
GOOGLE_SPEECH_API_KEY=your_google_speech_api_key_here 